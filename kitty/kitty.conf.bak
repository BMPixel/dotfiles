# Kitty Configuration
# ===================

# Window Style - Clean with Native Controls
# ------------------------------------------
# Keep traffic light buttons but transparent titlebar
# macos_titlebar_color background

# Window margins and padding for cleaner look
window_margin_width 8
window_padding_width 12

# Window behavior
remember_window_size yes
initial_window_width 120c
initial_window_height 35c

# Font Configuration
# ------------------
font_family SF Mono
font_size 14.0
adjust_line_height 110%
disable_ligatures never

# Cursor Configuration
# --------------------
cursor_shape block
cursor_blink_interval 0.5
cursor_stop_blinking_after 15.0

# Mouse and Selection
# -------------------
copy_on_select yes
focus_follows_mouse no

# Tab Bar
# -------
tab_bar_style powerline
tab_powerline_style round
tab_bar_margin_width 0.0
tab_bar_margin_height 5.0 0.0

# Window Layout
# -------------
enabled_layouts tall:bias=50;full_size=1;mirrored=false,fat,stack

# Performance
# -----------
repaint_delay 10
input_delay 3
sync_to_monitor yes


# BEGIN_KITTY_THEME
# Modus Operandi
include current-theme.conf
# END_KITTY_THEME
